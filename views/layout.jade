
doctype html

html(ng-app="westConn")
  
  
  head
    meta(charset="utf-8")
    link(rel='stylesheet/less', href='/stylesheets/style.less')
    link(href='http://fonts.googleapis.com/css?family=Roboto:500,300,700,400' rel='stylesheet' type='text/css')
    link(href='/javascripts/vendor/emojione/assets/css/emojione.min.css' rel='stylesheet')
    script(type='text/javascript', src='/javascripts/vendor/angular/angular.js')
    script(type='text/javascript', src='/javascripts/vendor/angular-animate/angular-animate.js')
    script(type='text/javascript', src='javascripts/ng-western.js')
    script(src="/javascripts/vendor/less/dist/less.js" type="text/javascript")
    script(src="/javascripts/vendor/ngSticky/dist/sticky.min.js" type="text/javascript")
    script(src="/javascripts/vendor/emojione/lib/js/emojione.min.js" type="text/javascript")
    script(src="/javascripts/vendor/angular-route/angular-route.js")
    link(href='/stylesheets/bootstrap.css' rel="stylesheet")
  
  
  body(class='main' ng-controller='pageController')
        header(sticky)
            p(class='title')
            img(class='menu' src='javascripts/vendor/material-design-icons/navigation/drawable-hdpi/ic_more_vert_white_48dp.png')
    div(class='left' ng-controller='classCardController') 
        class-card() 
    
    
    div(class='center' ng-controller='feedController')
        ul()
            li(class='discussion-list'  ng-animate="'animate'" ng-repeat='thread in threads.threads | filter:classWithFocus.code' mouse-over)
                discussion-card(ng-mouseover='expandFooter(this)' this-class='thread')
    
    
    div(class='right' ng-controller='classesController')
        ul()
            li(class='classes-list' ng-repeat='class in my_classes.classes')
                    classes-list-card(ng-click='classFocusChanged(class)')
    
